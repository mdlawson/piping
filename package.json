{
  "name": "piping",
  "version": "1.0.0-rc.3",
  "description": "Keep your code piping hot! Live code reloading without additional binaries",
  "main": "lib/piping.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "dev": "npm run build -s -- --watch",
    "test": "ava test",
    "prepublish": "npm run build",
    "test-all": "autochecker 4 5 6"
  },
  "dependencies": {
    "chokidar": "^1.5.0",
    "colors": "1.1.x",
    "lodash": "^4.12.0"
  },
  "ava": {
    "serial": true
  },
  "babel": {
    "presets": [
      "es2015-loose"
    ]
  },
  "devDependencies": {
    "autochecker": "^0.9.2",
    "ava": "^0.14.0",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-loose": "^7.0.0"
  },
  "repository": "git://github.com/mdlawson/piping.git",
  "keywords": [
    "live",
    "code",
    "reload",
    "hot"
  ],
  "author": "Michael Lawson",
  "license": "MIT"
}
